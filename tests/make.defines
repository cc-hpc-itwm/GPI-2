TOPROOT = $(PWD)

GPI_DIR = $(TOPROOT)/..
OFED_PATH = /usr
CC = gcc
CF = gfortran
CXX = g++

CFLAGS = -g -I$(GPI_DIR)/include
CPPFLAGS = -g -I$(GPI_DIR)/include

LIB_PATH = -L$(GPI_DIR)/lib64
LIBS = -lGPI2-dbg -lpthread -lrt

ifndef GPI2_DEVICE
GPI2_DEVICE = IB
endif

ifeq ($(findstring IB,$(GPI2_DEVICE)),IB)
LIB_PATH += -L$(OFED_PATH)/lib64
LIBS += -libverbs
endif

export
